#!/usr/bin/env nix-shell
#! nix-shell -p nixos-generators -i bash

set -x

export NIX_PATH=nixpkgs=channel:nixos-24.11

if [ -z "$1" ]; then
	format="install-iso"
else
	format=$1
fi

if [ -z "$2" ]; then
	system=""
else
	system="--system ${2}"
fi

if [[ $format == *-cloud ]]; then
	format=${format%-cloud}
	config="./config/cloud.nix"
	echo $format
else
	config="./config"
fi


nixos-generate -f "${format}" -c "${config}" --show-trace ${system} -o result
